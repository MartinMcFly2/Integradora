<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P1_Inversores.Page1">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="PORCENTAJES DE INVERSION" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Label Text="Total de Inversion"/>
            <Entry IsEnabled="False" x:Name="TOTAL"/>
            <Label Text="%Porcentaje Inversor 1"/>
            <Entry IsEnabled="False" x:Name="INV1"/>
            <Label Text="%Porcentaje Inversor 2"/>
            <Entry IsEnabled="False" x:Name="INV2"/>
            <Label Text="%Porcentaje Inversor 3"/>
            <Entry IsEnabled="False" x:Name="INV3"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>